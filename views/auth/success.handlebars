<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body text-center">
          <h2 class="text-success mb-4">
            <i class="fas fa-check-circle"></i>
            Success!
          </h2>
          <p class="lead">{{message}}</p>
          <div class="mt-4">
            <a href="/" class="btn btn-primary">Return to Home</a>
            {{#if showLogin}}
              <button type="button" class="btn btn-outline-primary ms-2" data-bs-toggle="modal" data-bs-target="#signin-modal">
                Sign In
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 