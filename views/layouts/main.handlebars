<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{title}}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Optional Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Doctors24</a>
        <!-- Navbar Links -->
        <div class="navbar-nav me-auto">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/protected">Protected</a>
                </li>
            </ul>
        </div>
        <!-- Sign In / Sign Out Button -->
        <div class="navbar-end">
          {{#unless user}}
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#signup-modal">
                  Sign Up
                </button>
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#signin-modal">
                  Sign In
                </button>
            </div>
          {{else}}
            <form action="/auth/signout" method="post" style="display:inline;">
              <button type="submit" class="btn btn-outline-secondary">Sign Out</button>
            </form>
          {{/unless}}
        </div>
    </div>
</nav>

<!-- Main Content -->
<main class="container mt-4">
    {{{body}}}
</main>

<!-- Login Modal -->
<div class="modal fade" id="signin-modal" tabindex="-1" aria-labelledby="signin-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signin-modal-label">Sign In</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{> signinForm }} <!-- Include the signinForm partial -->
            </div>
        </div>
    </div>
</div>

<!-- Forgot Password Modal -->
{{> forgotPasswordForm}}

<!-- Sign Up Modal -->
{{> signupForm}}

<!-- Add this before closing body tag -->
<script src="/js/signup.js"></script>
<script src="/js/passwordReset.js"></script>
<script src="/js/signin.js"></script>
</body>
</html>