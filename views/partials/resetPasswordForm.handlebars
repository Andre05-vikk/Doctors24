<div class="modal" id="resetPasswordModal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Reset Password</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form id="resetPasswordForm">
        <input type="hidden" name="_csrf" id="resetCsrfToken">
        <div class="field">
          <label class="label">New Password</label>
          <div class="control">
            <input class="input" type="password" name="password" required minlength="8">
            <p class="help is-danger password-error"></p>
          </div>
        </div>

        <div class="field">
          <label class="label">Confirm New Password</label>
          <div class="control">
            <input class="input" type="password" name="confirmPassword" required>
            <p class="help is-danger confirm-password-error"></p>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button type="submit" class="button is-primary">Reset Password</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div> 