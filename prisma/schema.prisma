datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

model User {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  email           String    @unique
  name            String
  password        String
  gender          String
  age             Int
  spokenLanguages String    // Stored as comma-separated values
  location        String?
  ratePerMinute   Float
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  role            String    @default("USER") // Can be "USER", "DOCTOR" or "ADMIN"
  isActive        Boolean   @default(true)
  emailVerified   Boolean   @default(false)
  verificationToken String?
  tokenExpiry     DateTime?
  resetToken      String?
  resetTokenExpiry DateTime?
  
  // Add any additional relationships here if needed
  // For example, if you need to store chat sessions, appointments, etc.
}

model Session {
  id        Int      @id @default(autoincrement())
  sid       String   @unique
  expiresAt DateTime
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
